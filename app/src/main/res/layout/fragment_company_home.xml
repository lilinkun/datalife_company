<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@color/bg_toolbar_title">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_datalife_qrcode"/>

        <ImageView
            android:id="@+id/ic_qrcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_35"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_marginRight="@dimen/margin_40"
            android:layout_gravity="center_horizontal"
            />


        <TextView
            android:id="@+id/text_search"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_category_edittext"
            android:drawableLeft="@mipmap/ic_search_bg"
            android:drawablePadding="@dimen/padding_10"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:layout_toRightOf="@+id/lin_list"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:visibility="gone"
            android:text="@string/scanner_action_scan"
            android:textColor="@color/search_edittext_bg"
            android:textSize="@dimen/text_size_14" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wx_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_40"
        android:background="@drawable/shape_layout_button"
        android:padding="@dimen/padding_10"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_home_scan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/margin_10"
            android:textColor="@color/white"
            android:text="微信扫码"/>

    </LinearLayout>


</LinearLayout>

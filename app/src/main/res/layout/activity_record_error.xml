<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/measure_search"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:src="@mipmap/ic_search_bg"/>

    <EditText
        android:id="@+id/et_record_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search"
        android:background="@null"
        android:textColorHint="@color/search_edittext_bg"
        android:layout_marginLeft="@dimen/margin_10"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_20"
        android:paddingRight="@dimen/padding_20">

        <LinearLayout
            android:id="@+id/ll_measure_tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_measure_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部类别"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/black_text_bg"/>

            <ImageView
                android:id="@+id/iv_measure_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_unclick_tip"
                android:layout_marginLeft="@dimen/margin_5"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_measure_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">


            <TextView
                android:id="@+id/tv_measure_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="异常"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/black_text_bg"/>

            <ImageView
                android:id="@+id/iv_measure_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_unclick_tip"
                android:layout_marginLeft="@dimen/margin_5"/>


        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="@color/grey_bg"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_record_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_5"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_member"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_bind_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/bg_toolbar_title"
            android:padding="@dimen/margin_small">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_bind_member"
                android:textColor="@color/white"/>
        </LinearLayout>

        <ListView
            android:id="@+id/lv_bind_member"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_little"
        android:layout_marginRight="@dimen/margin_little"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_little"
        android:background="@drawable/sharp_dialog_button"
        android:textColor="@color/white"
        android:text="@string/sure"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

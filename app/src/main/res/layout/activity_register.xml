<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/view_pop"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:background="@mipmap/ic_register_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_height"
        >
        <ImageView
            android:id="@+id/iv_leftback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_15"
            android:src="@mipmap/ic_login_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/white"
            android:text="@string/register"/>
    </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_25"
                android:layout_marginLeft="@dimen/margin_25"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_8"
                    android:paddingTop="@dimen/padding_10"
                    android:paddingBottom="@dimen/padding_10">
                    <ImageView
                        android:id="@+id/iv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_register_head"
                        />
                    <EditText
                        android:id="@+id/et_register_username"
                        style="@style/edit_common_style"
                        android:layout_toRightOf="@+id/iv_username"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_18_size"
                        android:hint="@string/my_add_hint"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_divide"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_8"
                    android:paddingTop="@dimen/padding_10"
                    android:paddingBottom="@dimen/padding_10">
                    <ImageView
                        android:id="@+id/iv_psd_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_register_psw"
                        />
                    <EditText
                        android:id="@+id/et_register_psw"
                        style="@style/edit_common_style"
                        android:layout_toRightOf="@+id/iv_psd_head"
                        android:layout_toLeftOf="@+id/ic_psd"
                        android:layout_centerVertical="true"
                        android:inputType="textPassword"
                        android:textSize="@dimen/text_18_size"
                        android:hint="@string/register_input_psd"/>
                    <ImageView
                        android:id="@+id/ic_psd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_little"
                        android:visibility="gone"
                        android:src="@mipmap/ic_close_psd"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_divide"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_register_next"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_18_size"
                    android:background="@drawable/register_sharp_btn"
                    android:textColor="@color/white"
                    android:text="@string/register_next" />

            </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_company_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_25"
        android:layout_marginLeft="@dimen/margin_25"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_register_head"
                android:layout_gravity="center_vertical"
                />
            <EditText
                android:id="@+id/et_register_account"
                style="@style/edit_common_style"
                android:textSize="@dimen/text_18_size"
                android:layout_centerVertical="true"
                android:hint="@string/register_input_user"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_divide"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_8"
            android:paddingTop="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_register_position"
                android:layout_gravity="center_vertical"
                />
            <EditText
                android:id="@+id/et_register_address"
                style="@style/edit_common_style"
                android:textSize="@dimen/text_18_size"
                android:layout_centerVertical="true"
                android:hint="@string/register_input_name"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_divide"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_8"
            android:paddingTop="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_register_name"
                android:layout_gravity="center_vertical"
                />

            <EditText
                android:id="@+id/et_register_name"
                style="@style/edit_common_style"
                android:layout_centerVertical="true"
                android:hint="@string/register_input_phone"
                android:textSize="@dimen/text_18_size" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_divide"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_8"
            android:paddingTop="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_register_phone" />

            <EditText
                android:id="@+id/et_register_phone"
                style="@style/edit_common_style"
                android:layout_centerVertical="true"
                android:hint="@string/input_vcode"
                android:textSize="@dimen/text_18_size" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_divide"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_upload"
            android:textColor="@color/register_text_color"
            android:layout_marginTop="@dimen/margin_8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/rl_take_photo"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:orientation="vertical"
                android:background="@color/regiter_grey"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/ll_pic_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_upload_pic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_upload_pic"
                    android:textSize="@dimen/text_size_16"
                    android:layout_marginTop="@dimen/margin_5"
                    android:textColor="@color/gray"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_take_photo1"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:visibility="gone"
                android:background="@color/regiter_grey"
                android:layout_marginLeft="@dimen/margin_10">


                <ImageView
                    android:id="@+id/iv_add1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_register_add"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:id="@+id/iv_photo1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_take_photo2"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:visibility="gone"
                android:background="@color/regiter_grey"
                android:layout_marginLeft="@dimen/margin_10">


                <ImageView
                    android:id="@+id/iv_add2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_register_add"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:id="@+id/iv_photo2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_register_over"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_marginRight="@dimen/margin_25"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_8"
        android:padding="@dimen/padding_10"
        android:textSize="@dimen/text_18_size"
        android:background="@drawable/register_sharp_btn"
        android:textColor="@color/white"
        android:text="@string/register_over" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_25"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_login_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="@string/login_prompt"/>
        <TextView
            android:id="@+id/tv_usage_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="@string/user_usage_protocol"/>
    </LinearLayout>
        </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>

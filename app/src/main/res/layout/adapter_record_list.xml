<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_5">

    <!--<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/line_bg"
        app:contentPaddingBottom="3dp"
        app:contentPaddingRight="3dp"
        app:cardElevation="3dp">-->

    <com.datalife.datalife_company.widget.ShadowViewCard
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shadowRound="5dp"
        app:shadowTopHeight="0dp"
        app:shadowBottomHeight="5dp"
        app:shadowLeftHeight="0dp"
        app:shadowRightHeight="3dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/measure_error_list"
        android:elevation="20dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_measure_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/ll_short_error"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_measure_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亚历山大"
            android:textColor="@color/black_text_bg"
            android:textSize="@dimen/text_size_18"
            android:layout_marginLeft="@dimen/margin_10"
            />

        <TextView
            android:id="@+id/tv_measure_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15112345678"
            android:textColor="@color/black_text_bg"
            android:textSize="@dimen/text_size_14.4"
            android:layout_marginLeft="@dimen/margin_20"
            />

        <TextView
            android:id="@+id/tv_measure_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/measure_error_bg"
            android:gravity="right"
            android:textSize="@dimen/text_size_14.4"
            android:layout_marginRight="@dimen/margin_10"
            android:text="血压异常"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_long_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_measure_error_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/measure_error_info"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_15"
            android:textSize="@dimen/text_size_15"
            android:text="7月2日17:23 监测血压138/78mmHg ： 属正常高值，需留意."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
        <Button
            android:id="@+id/btn_measure_chart"
            android:layout_width="85dp"
            android:layout_height="34dp"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/measure_error_btn"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/measure_chart_btn"
            android:text="检测图表"/>

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

    </com.datalife.datalife_company.widget.ShadowViewCard>
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>
